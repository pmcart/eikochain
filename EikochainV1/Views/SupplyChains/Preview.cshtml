@{
    ViewBag.Title = "Preview";
}
@{
    Layout = "_LayoutPreview.cshtml";
}

<style>
    main {
        background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url(/images/bgimage.jpg) no-repeat center center fixed;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
        position: absolute;
        top: 0;
        left: 0;
        bottom: 0;
        right: 0;
        height: 2000px;
        width: 100%;
    }

    .preview-menu-item {
        color: white !important;
        margin-bottom: 50px;
    }

    .preview-heading {
        color: white !important;
    }

    .preview-main {
        margin-top: 50px;
    }

    .preview-para {
        color: aliceblue;
        font-size: 20px;
    }

    .preview-side-menu {
        padding: 20px;
    }

    #wrapper {
  overflow-x: hidden;
}

    p{
        color:white !important;
    }

    #sidebar-wrapper {
        min-height: 100vh;
        margin-left: -15rem;
        transition: margin 0.25s ease-out;
        padding: 20px;
        color: white !important;
    }

#sidebar-wrapper .sidebar-heading {
  padding: 0.875rem 1.25rem;
  font-size: 1.2rem;
}

#sidebar-wrapper .list-group {
  width: 15rem;
}

#page-content-wrapper {
  min-width: 100vw;
  margin-top:20px;
}

body.sb-sidenav-toggled #wrapper #sidebar-wrapper {
  margin-left: 0;
}


    .list-group-item-action {
        color: white !important;
        font-size: 30px;
        margin-bottom: 20px;
        background-color: transparent !important;
    }

        .list-group-item-action:active {
            color: #ff6a00;
            background-color: transparent !important;
        }

    h1{
        color:white;
    }

@@media (min-width: 768px) {
  #sidebar-wrapper {
    margin-left: 0;
  }

  #page-content-wrapper {
    min-width: 0;
    width: 100%;
  }

  body.sb-sidenav-toggled #wrapper #sidebar-wrapper {
    margin-left: -15rem;
  }

    .list-group-item-action {
        color:white !important;
        font-size:30px;
        margin-bottom:20px;
    }
}
</style>
